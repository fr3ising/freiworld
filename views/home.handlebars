<div class="container">
  {{#each links}}
  <h1><a href="/link/{{this.id}}">{{this.title}}</a></h1>
  <p style="text-align:right;color:olive"><i>Enviado por {{this.nick}} - {{this.idate}}</i></p>
  <p>{{this.comment}}</p>
  <br/>
  {{/each}}

  {{content}}
  {{#if nick}}
  <a href="/sendLink" style="width:240px;text-align:left" class="btn btn-primary btn-lg">
    <span class="glyphicon glyphicon-send" style="margin-right:30px"></span> Enviar link
  </a>
  <br/>
  <br/>
  <a href="/signout" style="width:240px;text-align:left" class="btn btn-danger btn-lg">
    <span class="glyphicon glyphicon-log-out" style="margin-right:30px"></span> Bye {{nick}}
  </a>
  <br/>
  {{else}}
  <a href="/signin" style="width:240px;text-align:left" class="btn btn-primary btn-lg">
    <span class="glyphicon glyphicon-eye-open" style="margin-right:30px"></span> Identificarse
  </a>
  <br/>
  <br/>
  <a href="/signup" style="width:240px;text-align:left" class="btn btn-success btn-lg">
    <span class="glyphicon glyphicon-hand-up" style="margin-right:30px"></span> Registrarse
  </a>
  

  {{/if}}
</div>
