<div class="container">
  {{#if nick}}
  <form class="form-signin" method="POST" enctype="application/x-www-form-urlencoded" action="/postLink">
    {{#if fail}}
    <p style="text-align:center;color:red">{{fail}}</p>
    {{/if}}
    <input id="uri" name="uri" class="form-control" placeholder="Url" 
	   value="{{uri}}" required></input>
    <br/>
    <input id="title" name="title" class="form-control" placeholder="TÃ­tulo" 
	   value="{{title}}" required></input>
    <br/>
    <textarea id="comment" name="comment" class="form-control" 
	      placeholder="Entradilla" rows="10" 
	      required>{{comment}}</textarea>
    <br/>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
  </form>
  {{else}}
  <p style="text-align:center;color:red">Debes estar conectado para poder enviar links</p>
  {{/if}}
</div>
