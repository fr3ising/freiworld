<div class="container">
  {{#if nick}}
  <form class="form-signin" method="POST" enctype="application/x-www-form-urlencoded" action="/postLink">
    <center>
      {{#if fail}}
      <p style="text-align:center;color:red">{{fail}}</p>
      {{/if}}
      <input style="width:240px" id="uri" name="uri" class="form-control" placeholder="Url" 
	     value="{{uri}}" required></input>
      <br/>
      <input style="width:240px" id="linkTitle" name="linkTitle" class="form-control" placeholder="TÃ­tulo" 
	     value="{{linkTitle}}" required></input>
      <br/>
      <textarea style="width:240px" id="comment" name="comment" class="form-control" 
		placeholder="Entradilla" rows="8" 
		required>{{comment}}</textarea>
      <br/>
      <button style="width:240px" class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
    </center>
  </form>
  {{else}}
  <p style="text-align:center;color:red">Debes estar conectado para poder enviar links</p>
  {{/if}}
</div>
