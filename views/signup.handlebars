<div class="container">
  <form id="form" class="form-signin" method="POST" enctype="application/x-www-form-urlencoded" action="/register">
    {{#if fail}}
    <p style="text-align:center;color:red">{{fail}}</p>
    {{/if}}
    <input id="nick" name="nick" class="form-control" placeholder="Nick" required></input>
    <br/>
    <input type="email" name="email" id="email" class="form-control" placeholder="Email" 
	   required></input>
    <br/>
    <input type="password" name="password" id="password" class="form-control" placeholder="Password" required></input>
    <br/>
    <input type="password" name="rpassword" id="rpassword" class="form-control" placeholder="Password otra vez" required></input>
    <br/>
    <button class="btn btn-lg btn-primary btn-block" type="submit">RegÃ­strate</button>
  </form>
</div>
